// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========== USER MODEL ==========
model User {
  id            Int      @id @default(autoincrement())
  userId        String   @unique
  name          String
  email         String   @unique
  passwordHash  String
  avatarUrl     String?
  bio           String?
  interests     String[] @default([])
  dateOfBirth   DateTime?
  isVerified    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  ownedRooms         Room[]            @relation("RoomHost")
  participations     RoomParticipant[]
  sentConnections    Connection[]      @relation("ConnectionRequester")
  receivedConnections Connection[]     @relation("ConnectionAddressee")
  sentInvites        RoomInvite[]      @relation("InviteSender")
  receivedInvites    RoomInvite[]      @relation("InviteReceiver")
  notifications      Notification[]

  @@index([email])
  @@index([userId])
}

// ========== ROOM MODEL ==========
model Room {
  id           Int       @id @default(autoincrement())
  roomId       String    @unique
  name         String?
  description  String?
  isPublic     Boolean   @default(false)
  passcodeHash String?   // NULL if no passcode
  maxUsers     Int       @default(10)
  hostUserId   String
  currentVideoUrl String?
  isPlaying    Boolean   @default(false)
  currentTime  Float     @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  host         User              @relation("RoomHost", fields: [hostUserId], references: [userId], onDelete: Cascade)
  participants RoomParticipant[]
  invites      RoomInvite[]

  @@index([roomId])
  @@index([isPublic])
  @@index([hostUserId])
}

// ========== ROOM PARTICIPANTS MODEL ==========
model RoomParticipant {
  id        Int      @id @default(autoincrement())
  roomId    String
  userId    String
  joinedAt  DateTime @default(now())
  isActive  Boolean  @default(true)

  // Relations
  room Room @relation(fields: [roomId], references: [roomId], onDelete: Cascade)
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([roomId, userId])
  @@index([roomId])
  @@index([userId])
}

// ========== CONNECTIONS/FRIENDSHIPS MODEL ==========
model Connection {
  id           Int      @id @default(autoincrement())
  requesterId  String
  addresseeId  String
  status       ConnectionStatus @default(PENDING)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  requester User @relation("ConnectionRequester", fields: [requesterId], references: [userId], onDelete: Cascade)
  addressee User @relation("ConnectionAddressee", fields: [addresseeId], references: [userId], onDelete: Cascade)

  @@unique([requesterId, addresseeId])
  @@index([requesterId])
  @@index([addresseeId])
  @@index([status])
}

enum ConnectionStatus {
  PENDING
  ACCEPTED
  REJECTED
  BLOCKED
}

// ========== ROOM INVITES MODEL ==========
model RoomInvite {
  id         Int      @id @default(autoincrement())
  roomId     String
  fromUserId String
  toUserId   String
  status     InviteStatus @default(PENDING)
  message    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  room       Room @relation(fields: [roomId], references: [roomId], onDelete: Cascade)
  fromUser   User @relation("InviteSender", fields: [fromUserId], references: [userId], onDelete: Cascade)
  toUser     User @relation("InviteReceiver", fields: [toUserId], references: [userId], onDelete: Cascade)

  @@index([toUserId])
  @@index([roomId])
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
}

// ========== NOTIFICATIONS MODEL ==========
model Notification {
  id         Int      @id @default(autoincrement())
  userId     String
  type       NotificationType
  title      String
  message    String?
  fromUserId String?
  roomId     String?
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([createdAt])
}

enum NotificationType {
  FRIEND_REQUEST
  FRIEND_ACCEPTED
  FRIEND_REJECTED
  ROOM_INVITE
  SYSTEM
}
